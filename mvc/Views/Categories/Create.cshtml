@model mvc.Models.Category

@{
    ViewBag.Title = "Новая категория";
}

<h2>Новая категория</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p class="text-left"> Название:</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.categ_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.categ_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-actions no-color">

        <input type="submit" value="Создать" class="btn btn-success" />
        <a class="btn btn-default" href="~/Categories/Index">Вернуться к списку</a>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
