@model IEnumerable<mvc.Models.Category>

@{
    ViewBag.Title = "Категории";
}

<h2>Категории</h2>

<p>
<p><a class="btn btn-default" href="~/Categories/Create">Создать новую категорию</a></p>
</p>
<table class="table">
    
    <tr>
        <th>
            Название
        </th>
        <th></th>
        <th></th>
       
    </tr>
  @foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categ_name)
        </td>

        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.categ_name })
        </td>
       
        <td>
            @Html.ActionLink("Удалить", "Delete", new { id = item.categ_name })

        </td>
    </tr>
   }

 </table>
